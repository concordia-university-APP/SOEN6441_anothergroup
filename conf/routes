# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.YoutubeController.searchForm(request: Request)
GET     /search                     controllers.YoutubeController.search(query: String, request: Request)

GET     /video/:id                  controllers.YoutubeController.video(id: String)
GET     /channel/:channelId         controllers.YoutubeController.showChannelProfile(channelId: String)
GET     /videos/:tag                controllers.YoutubeController.videosByTag(tag: String)
GET     /showVideoWithTags/:videoId controllers.YoutubeController.showVideoWithTags(videoId: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /statistics/:query          controllers.YoutubeController.getStatistics(query: String, request: Request)